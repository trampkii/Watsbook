<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorMainDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/MyTheme.Button</item>
        <item name="android:buttonStyle">@style/MyTheme.Button</item>
        <item name="android:textViewStyle">@style/MyTheme.TextView</item>
        <item name="editTextStyle">@style/MyTheme.EditText</item>
        <item name="android:textColorHint">@color/colorLightAsh</item>
        <item name="android:editTextStyle">@style/MyTheme.EditText</item>
    </style>

    <!--Splash screen-->
    <style name="MyTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Button-->
    <style name="MyTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textSize">18sp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/colorLightAsh</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/style_rounded_button</item>
    </style>

    <!--Title Text View-->
    <style name="MyTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorLightAsh</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <!--Edit Text-->
    <style name="MyTheme.EditText" parent="android:Widget.EditText">
        <item name="android:background">@drawable/style_rounded_bg_dark_gray</item>
        <item name="android:backgroundTint">@color/colorEditTextGray</item>
        <item name="android:textColor">@color/colorLightAsh</item>
        <item name="android:textColorHint">@color/colorLightAsh</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingHorizontal">22dp</item>
    </style>

    <!--Alert dialog-->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
      <item name="colorAccent">@color/colorKhaki</item>
      <item name="android:elevation">5dp</item>
      <item name="android:textColorPrimary">@color/colorLightAsh</item>
      <item name="android:backgroundTint">@color/colorMainDark</item>
      <item name="android:windowBackground">@drawable/style_rounded_bg_gray</item>
    </style>


</resources>